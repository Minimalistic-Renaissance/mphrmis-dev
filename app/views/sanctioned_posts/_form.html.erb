<%= simple_form_for @sanctioned_post, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :hospital,label_method: :hospital_name, value_method: :id, include_blank: false %>
  <%= f.association :designation,label_method: :Designation_English, value_method: :id, include_blank: false %>
  <%= f.input :sanctioned_posts %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sanctioned_posts_path, :class => 'btn' %>
  </div>
<% end %>
